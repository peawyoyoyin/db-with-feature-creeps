extends ../common/layout.pug
block content
  .container
    h3 search courses
    hr
    form(action="/course/search")
      .form-row.align-items-end
        .col-lg-3
          label(for="courseID") Course ID
          if searchCourseID
            input.form-control(type="text" name="courseID" value=searchCourseID)
          else
            input.form-control(type="text" name="courseID")
        .col-lg-4
          label(for="courseName") Course Name
          if searchCourseName
            input.form-control(type="text" name="courseName" value=searchCourseName)
          else
            input.form-control(type="text" name="courseName")
        .col-lg-2
          label(for="semester") Semester
          select.form-control(name="semester")
            each semester in semesters
              if semester.value == selectedSemester
                option(value=semester.value selected) #{semester.text}
              else
                option(value=semester.value) #{semester.text}
        .col-lg-2
          label(for="credits") Credits
          if searchCredits
            input.form-control(type="text" name="credits" value=searchCredits)
          else
            input.form-control(type="text" name="credits")

        .col-lg-1
          button.btn.btn-primary(type="submit") Submit
    hr
    if searchResults
      if searchResults.length == 0
        h3.text-center.text-danger Course Not Found
      else 
        table.table.table-hover.position-relative
          thead
            tr
              th Course ID
              th Course Name
              th Credits
          tbody
            each course in searchResults
              tr
                td
                  a.table-row-link.text-dark(href='/course/detail/' + course.instanceID) #{course.courseID}
                td #{course.courseName}
                td #{course.credits}

    else
      h5 Start Searching using the search bar!
