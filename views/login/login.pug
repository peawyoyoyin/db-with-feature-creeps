extends ../common/layout
block content
  .col.pt-4
    .container
      .jumbotron.text-center.bg-transparent
        h2 Please login first
      form.col-6.container.py-3.d-block.border.rounded(action="/login" method="POST")
        .form-group
          .form-row
            .col-2.offset-1
              label(for="id") ID 
            .col-6.offset-2
              input.form-control(type="text" name="id")
        .form-group
          .form-row
            .col-2.offset-1
              label(for="password") Password
            .col-6.offset-2
              input.form-control(type="password" name="password")
        .form-group.mb-0
          .form-row
            .col.d-flex
              button.btn.btn-primary.mx-auto(type="submit") Login
        if message.error
          .alert.alert-danger #{message.error}

block sidebar_items
  ul.sidebar-menu.nav.flex-column
    li.nav-item.sidebar-nav-item
      a.nav-link.sidebar-nav-link.pl-0.my-1.py-0(href="/newstudent") new student

